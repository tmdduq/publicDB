<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:gravity="right"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:lines="1"
            android:autoSizeTextType="uniform"
            android:text="소속"
            android:background="@drawable/layout_border_label"
            android:layout_weight="1.5"/>

        <Spinner
            android:id="@+id/statistic_pname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/layout_xpenfl"
            android:entries="@array/sName"
            android:textAlignment="center"
            android:layout_margin="3dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/statistic_accept"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:autoSizeTextType="uniform"
            android:text="조회"
            android:background="@drawable/layout_border_yellow"
            android:layout_weight="1.5"/>


    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:padding="10dp"
        android:background="@drawable/layout_border"
        android:layout_weight="0.2">
        <WebView
            android:id="@+id/statistic_webview"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/layout_border"/>


    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.8">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/statistic_district_label"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:lines="1"
                    android:autoSizeTextType="uniform"
                    android:text="구역"
                    android:background="@drawable/layout_border_yellow"/>
                <Button
                    android:id="@+id/statistic_district_count"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:lines="1"
                    android:background="@drawable/buttonshape_blue"
                    android:autoSizeTextType="uniform"
                    android:text="0건"/>
                <Button
                    android:id="@+id/statistic_picture_label"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:lines="1"
                    android:autoSizeTextType="uniform"
                    android:text="사진"
                    android:background="@drawable/layout_border_yellow"/>
                <Button
                    android:id="@+id/statistic_picture_count"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:lines="1"
                    android:background="@drawable/buttonshape_blue"
                    android:autoSizeTextType="uniform"
                    android:text="0건"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="클릭하시면 순위를 확인할 수 있어요."/>
</LinearLayout>